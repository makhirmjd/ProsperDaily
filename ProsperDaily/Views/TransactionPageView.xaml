<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProsperDaily.Views.TransactionPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:ProsperDaily.Shared.Entities;assembly=ProsperDaily.Shared"
    xmlns:ViewModels="clr-namespace:ProsperDaily.ViewModels"
    Title="TransactionPageView"
    x:DataType="ViewModels:TransactionPageViewModel">
    <Grid RowDefinitions=".15*,.15*,.7*">
        <RoundRectangle Grid.RowSpan="2" StyleClass="TopRectangle" />
        <VerticalStackLayout StyleClass="Header">
            <Label StyleClass="HeaderSubTitle" Text="Add Transaction" />
        </VerticalStackLayout>
        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            StyleClass="BalancedGrid">
            <RoundRectangle StyleClass="BalanceRectangle" />

            <VerticalStackLayout Spacing="10" StyleClass="Padding25">
                <Label Text="Transaction Name" />
                <Border StyleClass="FrameBorder">
                    <Entry Text="{Binding Transaction.Name}" />
                </Border>
                <Label StyleClass="MarginT15" Text="Amount" />
                <Border StyleClass="FrameBorder">
                    <Entry
                        Keyboard="Numeric"
                        Text="{Binding Transaction.Amount}"
                        VerticalOptions="Center" />
                </Border>
                <Label StyleClass="MarginT15" Text="Transaction Date" />
                <Border StyleClass="FrameBorder">
                    <DatePicker Date="{Binding Transaction.TransactionDate}" />
                </Border>
                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Transaction.IsIncome}" />
                    <Label Text="Is Income?" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Button
                    Command="{Binding SaveTransactionCommand}"
                    StyleClass="MarginT15"
                    Text="Save" />
                <Button
                    Command="{Binding CancelCommand}"
                    StyleClass="MarginT15, RedControl"
                    Text="Cancel" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>